<h1>New game</h1>
<div class="letters">
  <% @letters.each do |letter| %>
  <div class="letter">
    <%= letter %>
  </div>
  <% end %>
</div>

<form action="score" method="POST" class="m-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="word">What is the longest word you can find?</label>
  <div class="input-group">
    <input name="word" class="form-control" type="text" placeholder="enter word">
    <div class="input-group-append">
      <button id="submit" class="btn btn-outline-secondary" type="submit">Play</button>
    </div>
  </div>
</form>
